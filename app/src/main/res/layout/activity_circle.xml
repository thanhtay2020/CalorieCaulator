<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">




    <me.itangqi.waveloadingview.WaveLoadingView
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/waveloadingview"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:wlv_borderColor="@color/colorAccent"
        app:wlv_borderWidth="3dp"
        app:wlv_progressValue="40"
        app:wlv_shapeType="circle"
        app:wlv_triangle_direction="north"
        app:wlv_titleCenterStrokeColor="@android:color/holo_blue_dark"
        app:wlv_titleCenter="0%"
        app:wlv_titleCenterStrokeWidth="3dp"
        app:wlv_titleCenterColor="@android:color/white"
        app:wlv_titleCenterSize="30sp"
        app:wlv_waveAmplitude="70"
        app:wlv_waveColor="@color/colorAccent"/>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linerone"
        android:layout_toLeftOf="@+id/waveloadingview"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp">


        <ImageView
            android:background="@drawable/circle"
            android:id="@+id/btnone"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_local_dining_black_24dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="အစားအစာ"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#000"/>


        <ImageView
            android:background="@drawable/circle"
            android:id="@+id/btntwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_local_bar_black_24dp"
            android:layout_marginTop="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="သေသာက္စရာ"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#000"/>




    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linertwo"
        android:layout_toRightOf="@+id/waveloadingview"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp">

        <ImageView
            android:background="@drawable/circle"
            android:id="@+id/btnthree"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_favorite_border_black_24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="မုန့္ပဲသေရစာ"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#000"/>


        <ImageView
            android:background="@drawable/circle"
            android:id="@+id/btnfour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_favorite_border_black_24dp"
            android:layout_marginTop="25dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="အသီးအနွံာ"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#000"/>




    </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"

   android:layout_below="@+id/waveloadingview"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="5dp"
    android:layout_centerHorizontal="true"
    >
    <ImageView
        android:id="@+id/btnfive"
        android:background="@drawable/circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_directions_run_black_24dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ေလ့က်င့္ခန္း"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="#000"/>

</LinearLayout>
    <LinearLayout


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="300dp">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="တစ္ေန့တာအတြက္လိုအပ္ေသာကယ္လိုရီ"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#000"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/need_calories"/>


    </LinearLayout>
    <LinearLayout


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="350dp">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="လုပ္ေဆာင္ျပီးေသာကယ္လိုရီ"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#000"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/current_weight"/>


    </LinearLayout>

</RelativeLayout>